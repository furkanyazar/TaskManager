@model Entities.Dtos.UserRegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol</title>
    <link rel="stylesheet" href="/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <h4>Burada yeni misin?</h4>
                            <h6 class="font-weight-light">Kaydolmak kolaydır. Sadece birkaç adım sürer</h6>
                            @using(Html.BeginForm("Index", "Register", FormMethod.Post, new { @class="pt-3" }))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.FirstName, new { @class="form-control form-control-lg", placeholder="Ad" })
                                    @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.LastName, new { @class="form-control form-control-lg", placeholder="Soyad" })
                                    @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Email, new { @class="form-control form-control-lg", placeholder="E-posta", type="email" })
                                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Password, new { @class="form-control form-control-lg", placeholder="Şifre" })
                                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten hesabın var mı? <a asp-action="Index" asp-controller="Login" class="text-primary">Giriş yap</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/vendors/js/vendor.bundle.base.js"></script>
    <script src="/js/off-canvas.js"></script>
    <script src="/js/hoverable-collapse.js"></script>
    <script src="/js/misc.js"></script>
</body>
</html>
