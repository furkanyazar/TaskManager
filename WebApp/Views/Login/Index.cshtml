@model Entities.Dtos.UserLoginDto

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_SignLayout.cshtml";
}

<h4>Merhaba! Hadi başlayalım</h4>
<h6 class="font-weight-light">Devam etmek için giriş yap</h6>
@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "pt-3" }))
{
    <div class="form-group">
        @Html.TextBoxFor(x => x.Email, new { @class="form-control form-control-lg", placeholder="E-posta", type="email" })
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(x => x.Password, new { @class="form-control form-control-lg", placeholder="Şifre" })
        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
    </div>
    <div class="text-center mt-4 font-weight-light">
        Hesabın yok mu? <a asp-action="Index" asp-controller="Register" class="text-primary">Kayıt ol</a>
    </div>
}
